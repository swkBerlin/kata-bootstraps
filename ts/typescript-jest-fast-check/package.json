{
  "name": "typescript-jest-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Charles Ahmadzadeh <superzadeh@outlook.com>",
  "scripts": {
    "check-types": "npm run compile:ts --noEmit",
    "test": "cross-env NODE_ENV=test jest",
    "test:cover": "npm run test --coverage",
    "test:changed": "npm run test --watch",
    "test:ensure-failure": "bash ./ensure-a-failing-test.sh",
    "test:update": "npm run test -u",
    "test:watch": "npm run test --watchAll",
    "lint": "eslint --ext .js,.ts",
    "compile": "npm run lint && npm run compile:ts",
    "compile:watch": "npm run compile:ts -w",
    "compile:ts": "tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-jest": "29.0.0",
    "cross-env": "6.0.3",
    "eslint": "^8.56.0",
    "fast-check": "^3.15.1",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(\\.|/)(test)\\.(js|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "globals": [
      "expect"
    ]
  }
}
